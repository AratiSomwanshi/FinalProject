@model eShopSystem.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<style>
    /* General body and layout */
    body {
        background-color: #f8f9fa; /* Light background */
        font-family: Arial, sans-serif; /* Clean and modern font */
        margin: 0;
        padding: 0;
    }

    /* Page content container */
    .container {
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Header styles */
    h1 {
        color: #333;
        text-align: center;
        margin-top: 20px;
    }

    h3 {
        color: #d9534f; /* Red color for warning */
        text-align: center;
    }

    h4 {
        color: #555;
        text-align: center;
    }

    /* Form container */
    .form-container {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    /* Definition list styling */
    .dl dt {
        font-weight: bold;
    }

    .dl dd {
        margin-bottom: 10px;
    }

    /* Button and links */
    .btn {
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    a {
        text-decoration: none;
        color: #007bff;
    }

        a:hover {
            color: #0056b3;
        }

    /* Footer link */
    .footer-links {
        text-align: center;
        margin-top: 10px;
    }
</style>

<div class="container">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>

    <div class="form-container">
        <h4>Category</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CategoryName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CategoryName)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </form>

        <div class="footer-links">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
