@{
    ViewData["Title"] = "Contact Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Link to Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Link to Google Fonts for classical font -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet" />

    <style>
        /* General Page Styling */
        body {
            font-family: 'Playfair Display', serif; 
            color: #ffffff;
            line-height: 1.6;
            min-height: 100vh;
        }

        .container {
            background-color: rgba(0, 0, 0, 0.6); /* Dark overlay for better text readability */
            padding: 30px;
            border-radius: 10px;
        }

        h1 {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 20px;
        }

        h2 {
            font-size: 2rem;
            font-weight: 700;
            margin-top: 30px;
            border-bottom: 2px solid #ffffff;
            padding-bottom: 5px;
        }

        p, label {
            font-size: 1.1rem;
        }

        .lead {
            font-size: 1.2rem;
            font-weight: 400;
        }

        .form-label {
            font-weight: 500;
        }

        .btn-primary {
            background-color: #ff7e5f;
            border-color: #feb47b;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #feb47b;
                border-color: #ff7e5f;
            }

        .form-control, textarea {
            border-radius: 8px;
        }

            .form-control:focus, textarea:focus {
                box-shadow: 0 0 10px rgba(255, 126, 95, 0.5);
            }

        .footer {
            margin-top: 30px;
            text-align: center;
            color: #ccc;
            font-size: 1rem;
        }

            /* Ensure good spacing in the footer */
            .footer p {
                margin: 10px 0;
            }
    </style>
</head>
<body>
    <!-- Main Content -->
    <main role="main" class="container mt-5">
        <h1 class="text-center my-5">@ViewData["Title"]</h1>

        <section>
            <p class="lead">
                We'd love to hear from you! Whether you have questions about our products, need assistance with an order, or just want to say hello, please feel free to reach out to us.
            </p>

            <h2>Contact Information</h2>
            <p>
                <strong>Email:</strong> support@eshopsystem.com <br />
                <strong>Phone:</strong> +1 (800) 123-4567 <br />
                <strong>Address:</strong> 123 E-Shop St., Online City, Web 12345
            </p>

            <h2>Contact Form</h2>
            <form method="post" action="/Home/SendContactForm">
                <div class="mb-3">
                    <label for="name" class="form-label">Your Name</label>
                    <input type="text" class="form-control" id="name" name="name" required aria-label="Enter your full name" />
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Your Email</label>
                    <input type="email" class="form-control" id="email" name="email" required aria-label="Enter your email address" />
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Your Message</label>
                    <textarea class="form-control" id="message" name="message" rows="4" required aria-label="Enter your message here"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </section>

        <!-- Footer -->
        <div class="footer">
            <p>Thank you for reaching out to us. We'll get back to you as soon as possible.</p>
        </div>
    </main>

    <!-- Bootstrap JS (Optional for functionality like modals, tooltips, etc.) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
