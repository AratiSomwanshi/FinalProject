@model IEnumerable<eShopSystem.Models.Order>

@{
    ViewData["Title"] = "Order History";
}

<h2>Order History</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Total Price</th>
            <th>Status</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.TotalPrice.ToString("C")</td>
                <td>@order.Status</td>
                <td>
                    <a href="@Url.Action("OrderConfirmation", "Order", new { orderId = order.Id })">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
