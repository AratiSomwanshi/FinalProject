@model eShopSystem.Models.Order

@{
    ViewData["Title"] = "Process Payment";
}
<style>
    body {
        background-color: #99ffff;
    }
</style>
<h2>Process Payment</h2>

<div>
    <h3>Order #@Model.Id</h3>
    <p>Total Price: @Model.TotalPrice.ToString("C")</p>

    <h4>Order Items:</h4>
    <ul>
        @foreach (var item in Model.OrderItems)
        {
            <li>@item.Product.Name - @item.Quantity x @item.Price.ToString("C")</li>
        }
    </ul>

    <h4>Select Payment Method:</h4>
    <form method="post" asp-action="CompletePayment" asp-controller="Payment">
        <input type="hidden" name="orderId" value="@Model.Id" />

        <div class="form-group">
            <label for="paymentMethod">Choose a Payment Method:</label>
            <select class="form-control" id="paymentMethod" name="paymentMethod">
                <option value="Credit Card">Credit Card</option>
                <option value="PayPal">PayPal</option>
                <option value="Bank Transfer">Bank Transfer</option>
                <option value="COD">Cash on Delivery</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Complete Payment</button>
    </form>
</div>
